-# !!!
-# %html
-#   %head
-#     %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
-#   %body
:css
  #email {
    margin: auto;
    margin-top: 50px;
  }

  #email-header {
    margin-bottom: 50px;
  }

  .card {
    background-color: #ffffff;
    border-radius: 4px;
    border: 1px solid #dee2e6;
    border-collapse: separate !important;
    width: 100%;
    overflow: hidden;
  }

  .card-body {
    padding: 1.25rem;
  }

  h1,h2,h3,h4,h5,h6 {
    font-weight: 500;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 8px;
  }

  h5 {
    font-size: 1.2rem;
    margin: 0;
  }

  h6 {
    font-size: 1rem;
  }

  .col-3, .col-9, .col-8, .col-4, .col-12 {
    display: inline-block;
    padding-right: 15px;
    padding-left: 15px;
  }

  .col-3 {
    width: 20%;
  }

  .col-9 {
    width: 68%;
  }

  .col-8 {
    width: 64%;
  }

  .col-4 {
    /* width: 33%; */
  }

  .btn {
    display: inline-block;
    font-weight: 400;
    color: #212529;
    text-align: center;
    vertical-align: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    background-color: transparent;
    border: 1px solid transparent;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    line-height: 1.5;
    border-radius: 0.25rem;
    transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    text-decoration: none;
  }

  #email-header .btn {
    margin-top: -130px;
  }

  .btn-success {
    color: #fff;
    background-color: #28a745;
    border-color: #28a745;
  }

  .btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
    line-height: 1.5;
    border-radius: 0.2rem;
  }

  .btn-outline-success {
      color: #28a745;
      border-color: #28a745;
  }

  .event-actions {
    float: right;
    margin-top: -35px;
  }

  .full-size-ticket-url {
    display: none;
  }

  @media screen and (max-width: 600px) {
    .col-8, .col-4 {
      width: 90% !important;
    }

    #email-logo {
      border: none !important;
      margin-bottom: 10px;
    }

    .col-4 {
      text-align: center !important;
    }

    a.playlist-url {
      margin: 0 !important;
      padding: 0.25rem 0.5rem !important;
      font-size: 0.875rem !important;
      line-height: 1.5 !important;
      border-radius: 0.2rem !important;
    }

    .event-actions {
      display: none !important;
    }

    .full-size-ticket-url {
      display: block !important;
      width: 100% !important;
      padding: 0 !important;
    }

    .full-size-ticket-url, a {
      width: 93% !important;
    }

    h5 {
      font-size: 1rem !important;
    }

    h6 {
        margin: 0 !important;
        font-size: 0.85rem !important;
    }

    .artist-event-block .col-3 {
      padding: 0 !important;
      width: 25% !important;
    }

    .artist-event-block .col-9 {
      padding: 5px !important;
    }
  }


#email.container.card
  .card-body
    #email-header.row
      #email-logo.col-8
        = image_tag('http://www.concertwire.live/assets/logo-5bb2ac8917d18859180c6d7a1c52041fa3516b46fda3d5b0139184775839a2ab.png')
        -# %img{:src => asset_url('logo.png')}
      .col-4
        %a.playlist-url.btn.btn-success.pull-right{:href => @playlist_url, :target => "_blank"} Listen on Spotify

    - if @this_week.length > 0
      .row
        %h2 This Week
      - @this_week.each do |event|
        = render 'partials/artist-block', :event => event

    - if @new_additions.length > 0
      .row
        %h2 Recently Added
      - @new_additions.each do |event|
        = render 'partials/artist-block', :event => event

    - if @popular.length > 0
      .row
        %h2
          %span Popular Concerts in
          %span= @city
          %span= @popular.length
      - @popular.each do |event|
        = render 'partials/artist-block', :event => event
